
<h1>{{model.title}}</h1>
<p>{{model.description}}</p>
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-lg" {{action "modalaction"}}>
  EDIT
</button>
<div class="row well">
	
	{{#each model.comments as |comment|}}

		{{show-comment data=comment action='deleteComment' }}

	{{/each}}
	
</div>
<div class="row">
	<div class="col-xs-12 col-md-6 ">
		{{add-comment action='submit' postid=model.id}}
	</div>
</div>


{{#if showmodal }}
     {{#bs-modal title="Form Example" body=false footer=false closeButton=false}}
       {{#bs-modal-body}}
         {{#bs-form action=(action "submit") model=model}}
           {{bs-form-element controlType="text" label="first name" property="title"}}
           {{bs-form-element controlType="textarea" label="last name" property="description" rows=10}}
         {{/bs-form}}
       {{/bs-modal-body}}
       {{#bs-modal-footer as |footer|}}
         {{#bs-button action='close12' type="button"}}cancelar{{/bs-button}}
         {{#bs-button buttonType="submit" type="success"}}Save{{/bs-button}}
       {{/bs-modal-footer}}
     {{/bs-modal}}
 {{/if}}